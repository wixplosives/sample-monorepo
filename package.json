{
  "name": "sample",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean --stream --parallel",
    "build": "lerna run build --stream --parallel",
    "lint": "eslint . --ext .js,.ts,.tsx -f codeframe",
    "pretest": "yarn typecheck && yarn lint",
    "test": "mocha \"packages/**/test/**/*.spec.ts?(x)\"",
    "start": "yarn workspace @sample/app start",
    "prettify": "yarn prettier \"packages/**/*.{js,ts,tsx}\" --write",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@ts-tools/node": "^1.1.1",
    "@ts-tools/webpack-loader": "^1.1.0",
    "@types/chai": "^4.2.3",
    "@types/compression": "^1.0.1",
    "@types/express": "^4.17.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "10",
    "@types/react": "^16.9.5",
    "@types/react-dom": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "chai": "^4.2.0",
    "css-loader": "^3.2.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-react": "^7.16.0",
    "html-webpack-plugin": "next",
    "lerna": "^3.17.0",
    "mini-css-extract-plugin": "^0.8.0",
    "mocha": "^6.2.1",
    "nodemon": "^1.19.3",
    "prettier": "^1.18.2",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "rimraf": "^3.0.0",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "~3.6.4",
    "webpack": "^4.41.1",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.2"
  },
  "license": "MIT",
  "private": true
}
