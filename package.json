{
  "name": "sample",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean --stream --parallel",
    "build": "lerna run build --stream --parallel",
    "lint": "eslint . --ext .js,.ts,.tsx -f codeframe",
    "pretest": "yarn typecheck && yarn lint",
    "test": "yarn test:unit",
    "test:unit": "mocha \"packages/**/test/**/*.spec.ts?(x)\"",
    "start": "yarn workspace @sample/app start",
    "typecheck": "tsc --noEmit",
    "prettify": "npx prettier \"packages/**/*.{js,ts,tsx}\" --write"
  },
  "devDependencies": {
    "@ts-tools/node": "^1.1.2",
    "@ts-tools/webpack-loader": "^1.1.2",
    "@types/chai": "^4.2.7",
    "@types/compression": "^1.0.1",
    "@types/express": "^4.17.2",
    "@types/mocha": "^5.2.7",
    "@types/node": "12",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "chai": "^4.2.0",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "html-webpack-plugin": "next",
    "lerna": "^3.20.2",
    "mini-css-extract-plugin": "^0.9.0",
    "mocha": "^7.0.0",
    "nodemon": "^2.0.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rimraf": "^3.0.0",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "~3.7.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  },
  "license": "MIT",
  "private": true
}