    "@types/compression": "^1.0.1",
    "@types/express": "^4.17.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "10",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "chai": "^4.2.0",
    "css-loader": "^3.2.0",
    "html-webpack-plugin": "next",
    "lerna": "^3.16.4",
    "mini-css-extract-plugin": "^0.8.0",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
